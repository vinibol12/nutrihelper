- if @user.errors.any?
  .row
    - @user.errors.full_messages.each do |message|
      .alert.alert-dismissible.alert-danger{:style => "max-width: 50%"}
        = message
= form_for @user, url: admin_users_path, html: {class: 'form-horizontal col-lg-6'} do |f|
  %h5 Enter client details
  %fieldset
    .col-lg-10
      %label.col-lg-2.control-label Name
      = f.text_field :first_name, class: 'form-control', rows:'3'
    .form-group
      %label.col-lg-2.control-label Surname
      .col-lg-10
        = f.text_field :last_name, class: 'form-control', rows:'3'
    .form-group
      %label.col-lg-2.control-label DOB
      .col-lg-10
        = f.date_select :date_of_birth,  {start_year: 1920, end_year: Date.today.year, class: 'form-control', rows:'3'}
    .form-group
      %label.col-lg-2.control-label{:for => "inputEmail"} Email
      .col-lg-10
        = f.text_field :email, class: 'form-control'
    .form-group
      %label.col-lg-2.control-label Gender
      .col-lg-10
        .radio
          = f.select :gender, [['Male', 'male'], ['Female', 'female']], rows:'3', include_blank: true, required: true
    .form-group
      .col-lg-10.col-lg-offset-2
        %button.btn.btn-primary{:type => "submit"} Submit
