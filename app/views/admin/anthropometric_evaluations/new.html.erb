<h2 class="page-title">
  Evaluation for <%= @user.full_name %>
</h2>
<%= form_for @evaluation, url: admin_anthropometric_evaluations_path do |e| %>
  <div class="container-fluid" style="height: 300px">
    <%= hidden_field_tag :appointment_id, @appointment.id %>
    <div class="col-lg-12">
      <h4>Circumferences</h4>
      <div class="col-lg-12">
        <label class="col-lg-12 evaluation-label">Abdomen</label>
        <%= e.number_field :abdomen, class: 'form-control', placeholder: 'cm' %>
      </div>
      <div class="col-lg-12">
        <label class="col-lg-12 evaluation-label">Waist</label>
        <%= e.number_field :waist, class: 'form-control', placeholder: 'cm' %>
      </div>
      <div class="col-lg-12">
        <label class="col-lg-12 evaluation-label ">Hips</label>
        <%= e.number_field :hip, class: 'form-control', placeholder: 'cm'%>
      </div>
      <div class="col-lg-12">
        <label class="col-lg-12 evaluation-label">Arm</label>
        <%= e.number_field :arm, class: 'form-control', placeholder: 'cm' %>
      </div>
    </div>
    <h4>Skin Folds</h4>
    <div class="form-group col-lg-4">
      <div class="col-lg-12">
        <label class="col-lg-12 evaluation-label">Triceps</label>
        <%= e.number_field :triceps, class: 'form-control', placeholder: 'mm' %>
      </div>
      <div class="col-lg-12">
        <label class="col-lg-12 evaluation-label ">Subscapular</label>
        <%= e.number_field :subscapular, class: 'form-control', placeholder: 'mm' %>
      </div>
      <div class="col-lg-12">
        <label class="col-lg-12 evaluation-label">Thigh</label>
        <%= e.number_field :thigh, class: 'form-control', placeholder: 'mm'%>
      </div>
    </div>

    <div class="form-group col-lg-4">
      <div class="col-lg-12">
        <label class="col-lg-12 evaluation-label">Abdominal</label>
        <%= e.number_field :abdominal, class: 'form-control', placeholder: 'mm' %>
      </div>
      <div class="col-lg-12">
        <label class="col-lg-12 evaluation-label">Iliac crest</label>
        <%= e.number_field :iliac_crest, class: 'form-control', placeholder: 'mm' %>
      </div>
      <div class="col-lg-12">
        <label class="col-lg-12 evaluation-label ">Chest</label>
        <%= e.number_field :chest, class: 'form-control', placeholder: 'mm' %>
      </div>
    </div>
    <div class="form-group col-lg-4">
      <div class="col-lg-12">
        <label class="col-lg-12 evaluation-label">Axilla</label>
        <%= e.number_field :axilla, class: 'form-control', placeholder: 'mm' %>
      </div>
    </div>

    <h4>BMI</h4>
    <div class="col-lg-8">
      <label class="col-lg-12 evaluation-label">Height</label>
      <%= e.number_field :height, class: 'form-control', placeholder: 'cm' %>
    </div>
    <div class="col-lg-8">
      <label class="col-lg-12 evaluation-label">Weight</label>
      <%= e.number_field :weight, class: 'form-control', step: :any, placeholder: 'kg' %>
    </div>
    <h4>Results</h4>
    <div class="col-lg-2">
      <div class=" col-lg-12">
        <label class="col-lg-12 evaluation-label">BMI</label>
        <%= e.number_field :bmi, class: 'form-control', step: :any %>
      </div>
    </div>
    <div class="col-lg-2">
      <div class=" col-lg-12">
        <label class="col-lg-12 evaluation-label">Lean Mass</label>
        <%= e.number_field :lean_mass, class: 'form-control', step: :any %>
      </div>
    </div>
    <div class="col-lg-2">
      <div class=" col-lg-12">
        <label class="col-lg-12 evaluation-label">Body Fat (kg)</label>
        <%= e.number_field :fat_mass, class: 'form-control', step: :any %>
      </div>
    </div>
    <div class="col-lg-2">
      <div class=" col-lg-12">
        <label class="col-lg-12 evaluation-label">Body Fat (%)</label>
        <%= e.number_field :fat_percentage, class: 'form-control', step: :any %>
      </div>
    </div>
    <div class="col-lg-2">
      <div class=" col-lg-12">
        <%= e.submit 'Save' , class:'btn btn-primary', style: 'margin-top: 13px'%>
      </div>
    </div>
    <div class="col-lg-2">
      <div class=" col-lg-12">
        <button  type="button" class='btn btn-primary' onclick="calculateBodyCompositions()" style='margin-top: 13px'>Calculate</button>
      </div>
    </div>
  </div>

<% end %>
