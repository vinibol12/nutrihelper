<div class="alert alert-dismissible alert-info">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Enter details below</strong>
</div>
<%= form_for user, html: {class: 'form-horizontal col-lg-6'} do |f|%>
  <fieldset>
    <div class="form-group">
      <label class="col-lg-2 control-label">Name</label>
      <div class="col-lg-10">
        <%=f.text_field :first_name, class: 'form-control', rows:'3' %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label">Surname</label>
      <div class="col-lg-10">
        <%=f.text_field :last_name, class: 'form-control', rows:'3' %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label">DOB</label>
      <div class="col-lg-10">
        <%=f.date_select :dob,  {start_year: 1920, end_year: Date.today.year, class: 'form-control', rows:'3'} %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputEmail" placeholder="Email">
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label">Gender</label>
      <div class="col-lg-10">
        <div class="radio">
            <%=f.select :gender, [['Male', 'male'], ['Female', 'female']], rows:'3', include_blank: true, required: true %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
          <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </fieldset>
<%-end%>
